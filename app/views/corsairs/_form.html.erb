<div class="row">
    <div class="col-sm-6">
        <div class="well bs-component">
            <%= form_for(@corsair, html:{multipart: true, class: "form-horizontal"}) do |f| %>
                <ul>
                    <% @corsair.errors.each do |k, message| %>
                        <li>
                            <%= message %>
                        </li>
                        <% end %>
                </ul>
                <div class="form-group">
                    <%= f.label :first_name, "Prénom", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= f.text_field :first_name, class: "form-control" %>
                        </div>
                </div>
                <div class="form-group">
                    <%= f.label :age, "Age", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= f.text_field :age, class: "form-control" %>
                        </div>
                </div>
                <div class="form-group">
                    <%= f.label :bio, "Bio", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= f.text_area :bio, class: "form-control" %>
                        </div>
                </div>
                <div class="form-group">
                    <%= f.label :likeness, "Préférence", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <div class="radio">
                                <label>
                    <%= f.radio_button :likeness, "Kebab" %>
                    <%= f.label :likeness_kebab, "Kebab"  %>
                </label>
                            </div>
                            <div class="radio">
                                <label>
                    <%= f.radio_button :likeness, "Hummus" %>
                    <%= f.label :likeness_hummus, "Hummus" %>
                </label>
                            </div>
                        </div>
                </div>
                <div class="form-group">
                    <%= f.label :slack_handle, "Slack", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= f.text_field :slack_handle, class: "form-control" %>
                        </div>
                </div>
                <div class="form-group">
                    <%= f.label :github_handle, "Github", class: "col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= f.text_field :github_handle, class: "form-control" %>
                        </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <%= f.submit "Envoyer", class: "btn btn-primary" %>
                            <button type="reset" class="btn btn-default">Annuler</button>
                    </div>
                </div>
                <% end %>
        </div>
    </div>
</div>